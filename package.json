{
  "name": "ftl-xml",
  "displayName": "FTL XML",
  "description": "provides autocomplete and other help to FTL mod devs",
  "version": "0.3.5",
  "publisher": "hahn-kev",
  "repository": {
    "type": "git",
    "url": "https://github.com/hahn-kev/ftl-xml-extension"
  },
  "icon": "logo.png",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:ftl-xml"
  ],
  "main": "./out/main",
  "browser": "./out/main.js",
  "contributes": {
    "languages": [
      {
        "id": "ftl-xml",
        "aliases": [
          "FTL XML",
          "ftl-xml"
        ],
        "extensions": [
          ".xml",
          ".xml.append"
        ],
        "configuration": "./language-configuration.json",
        "firstLine": "^<FTL>"
      }
    ],
    "grammars": [
      {
        "language": "ftl-xml",
        "scopeName": "text.xml",
        "path": "./syntaxes/xml.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "ftl-xml",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "ftl-xml.parse-workspace",
        "title": "FTL: Parse XML Files"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ftl-xml.parse-workspace",
          "when": "editorLangId == ftl-xml"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/main.ts --bundle --tree-shaking=true --outfile=out/main.js --external:vscode --format=cjs",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "tsc -p ./test.tsconfig.json && npm run compile",
    "test": "node ./out-test/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-html-languageservice": "^4.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vscode/test-electron": "^1.6.2",
    "chai": "^4.3.4",
    "esbuild": "^0.13.10",
    "eslint": "^8.2.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^4.4.3",
    "vsce": "^2.3.0"
  }
}
